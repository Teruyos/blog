<div id="main" class="floatwrap">

<h2>商品一覧</h2>

<table class="top_list">
	<tbody>
		<tr>
			<th><%= link_to 'Date' ,sort: 'date' %></th>
			<th><%= link_to 'Artist' ,sort: 'artist' %></th>
			<th><%= link_to 'Event' ,sort: 'title' %></th>
			<th><%= link_to 'Place' ,sort: 'place' %></th>
			<th><%= link_to 'Category' ,sort: 'category_id' %></th>
			<th><%= link_to 'Price' ,sort: 'price' %></th>
			<th><%= link_to 'Amount' ,sort: 'amount' %></th>
			<th>Order</th>
		</tr>

	<% @posts.each do |post| %>
		<tr>	
			<td><%= post.date %></td>
			<td><%= post.artist %></td>
			<td><%= link_to post.title, post_path(post) %></td>
			<td><%= post.place %></td>
			<td><a href="/cat_list/<%= post.category_id %>"><%= Category.find_by_id(post.category_id).name %></a></td>
			<td class="price"><%= post.price %></td>
			<td class="remainder"><%= post.amount %></td>
			<td class="order"><%= link_to '注文', edit_post_path(post) %></td>

			<% if user_signed_in? %>

			<td><%= link_to 'Edit', edit2_post_path(post) %></td>
			<td>
				<%= link_to 'Delete', post, :confirm => 'Sure?',
                            :method => :delete,
                            :remote => true %>
			</td>
			<% end %>
		</tr>
	<% end %>

	</tbody>
</table>


<% content_for :extend_index do %>

<%= render 'sidebar' %>

<% end %>

</div> <!-- end div#main  -->
