<div id="main" class="floatwrap">

<h2>カテゴリ一覧</h2>

<div id="newsArea">

<div id="news">
  <ul>

    <% @post_categories.each do |category, posts| %>

    <% if category.nil? %>

      <% postcat = "カテゴリ未登録" %>

    <% else %>

      <% postcat = Category.find(:all, :conditions => { :id => category }, :select => 'name') %>

      <% for entry in postcat %>
        <%postcat = h(entry.name) %>
      <% end %>

    <% end %>

      <li>
        <a href="/cat_list/<%= category %>"><%= postcat %></a>(<%= posts.count %>)
      </li>

    <% end %>

  </ul>
</div>

</div><!-- end newsArea --> 

  </div><!-- end div#main -->

<% content_for :extend_index do %>

<%= render 'sidebar' %>

<% end %>
